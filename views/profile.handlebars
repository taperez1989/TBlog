<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{profile.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="blog-title"> Blog Title</label>
        <input
          class="form-input"
          type="text"
          id="blog-title"
          name="blog-title"
        />
      </div>
      <div class="form-group">
        <label for="blog-content">Contents:</label>
        <textarea
          class="form-input"
          id="blog-content"
          name="blog-content"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if profile.blogs.length}}
    <div class="col-md-6 project-list">
     

      {{#each profile.blogs as |blog|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/blogs/{{blog.id}}">{{blog.title}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{blog.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>